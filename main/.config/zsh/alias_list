alias lsf='exa -alh --time-style=default --color=auto --group-directories-first --git --icons'
alias psf='procs'
alias ls='/bin/ls --color=auto'
alias diff='/bin/diff --color=auto'
alias grep='/bin/grep --color=auto'
alias egrep='/bin/egrep --color=auto'
alias fgrep='/bin/fgrep --color=auto'
alias wget='/bin/wget -q --show-progress --progress=bar'
# alias mpc='/bin/mpc --host=/tmp/mpd.sock'
alias sudo='sudo -v; sudo '
alias pm='sudo pacman'
alias pmc='sudo pacman -Rns $(pacman -Qtdq)'
alias r='lf'
alias v='nvim'
alias cat='bat'
alias coi='clear && oi'
